{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "destination": "/index.html",
        "source": "**"
      }
    ],
    "headers": [
      {
        "headers": [
          {
            "value": "no-cache, no-store, must-revalidate",
            "key": "Cache-Control"
          },
          {
            "value": "no-cache",
            "key": "Pragma"
          },
          {
            "value": "0",
            "key": "Expires"
          }
        ],
        "source": "/firebase-messaging-sw.js"
      },
      {
        "headers": [
          {
            "value": "no-cache, no-store, must-revalidate",
            "key": "Cache-Control"
          },
          {
            "value": "no-cache",
            "key": "Pragma"
          },
          {
            "value": "0",
            "key": "Expires"
          }
        ],
        "source": "/manifest.webmanifest"
      },
      {
        "headers": [
          {
            "value": "no-cache, no-store, must-revalidate",
            "key": "Cache-Control"
          },
          {
            "value": "no-cache",
            "key": "Pragma"
          },
          {
            "value": "0",
            "key": "Expires"
          }
        ],
        "source": "/manifest.json"
      }
    ]
  }
}
